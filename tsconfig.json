{
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "outDir": "lib",
        "noImplicitAny": false,
        "module": "CommonJS",
        "target": "es6",
        "moduleResolution": "node",
        "jsx": "preserve",
        "allowJs": true,
        "sourceMap": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "allowUmdGlobalAccess": true,
        "noEmitOnError": false,
        "experimentalDecorators": true
    }
}